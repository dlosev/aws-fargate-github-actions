{
  "family": "FargateStack",
  "executionRoleArn": "arn:aws:iam::505510851740:role/FargateEcsTaskExecutionRole",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "image": "505510851740.dkr.ecr.eu-central-1.amazonaws.com/app",
      "name": "app",
      "essential": true,
      "dependsOn": [
        {
          "containerName": "mysql",
          "condition": "START"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "80"
        },
        {
          "name": "SYMFONY_PROJECT_NAME",
          "value": "test-app"
        },
        {
          "name": "MARIADB_HOST",
          "value": "127.0.0.1"
        },
        {
          "name": "MARIADB_PORT_NUMBER",
          "value": "3306"
        }
      ],
      "secrets": [
        {
          "name": "MARIADB_USER",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-user"
        },
        {
          "name": "MARIADB_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-password"
        },
        {
          "name": "MARIADB_DATABASE",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-database"
        }
      ],
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-central-1",
          "awslogs-group": "/ecs/fargateServiceLogGroup",
          "awslogs-stream-prefix": "symfony"
        }
      }
    },
    {
      "image": "mysql:5.7",
      "name": "mysql",
      "essential": true,
      "secrets": [
        {
          "name": "MYSQL_USER",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-user"
        },
        {
          "name": "MYSQL_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-password"
        },
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-root-password"
        },
        {
          "name": "MYSQL_DATABASE",
          "valueFrom": "arn:aws:ssm:eu-central-1:505510851740:parameter/mysql-database"
        }
      ],
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 3306
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-central-1",
          "awslogs-group": "/ecs/fargateServiceLogGroup",
          "awslogs-stream-prefix": "mysql"
        }
      }
    }
  ]
}
