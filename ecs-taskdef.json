{
  "family": "FargateStack",
  "executionRoleArn": "$ECS_ROLE",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "image": "$IMAGE",
      "name": "app",
      "essential": true,
      "dependsOn": [
        {
          "containerName": "mysql",
          "condition": "START"
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": "80"
        },
        {
          "name": "SYMFONY_PROJECT_NAME",
          "value": "test-app"
        },
        {
          "name": "MARIADB_USER",
          "value": "$DATABASE_USER"
        },
        {
          "name": "MARIADB_PASSWORD",
          "value": "$DATABASE_PASSWORD"
        },
        {
          "name": "MARIADB_DATABASE",
          "value": "$DATABASE_NAME"
        },
        {
          "name": "MARIADB_HOST",
          "value": "$DATABASE_HOST"
        },
        {
          "name": "MARIADB_PORT_NUMBER",
          "value": "3306"
        }
      ],
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-central-1",
          "awslogs-group": "/ecs/fargateServiceLogGroup",
          "awslogs-stream-prefix": "symfony"
        }
      }
    },
    {
      "image": "mysql:5.7",
      "name": "mysql",
      "essential": true,
      "environment": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "$DATABASE_PASSWORD"
        }
      ],
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 3306
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-central-1",
          "awslogs-group": "/ecs/fargateServiceLogGroup",
          "awslogs-stream-prefix": "mysql"
        }
      }
    }
  ]
}
